{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/jobs": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Job listings are public",
            "rule": "public"
          }
        ]
      }
    }
  },
